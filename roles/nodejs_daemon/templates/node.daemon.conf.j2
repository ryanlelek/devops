#!upstart

description "Node.js Daemon"
author      "ryanlelek@gmail.com"

start on runlevel [2345]
stop on runlevel [!2345]
#start on filesystem or runlevel [2345]
#stop on shutdown

# Environment
{% for envvar in envvars %}
env {{ envvar.key }}="{{ envvar.value }}"
{% endfor %}

chdir /home/{{ ansible_ssh_user }}
setuid {{ ansible_ssh_user }}
setgid sudo

respawn

script

  export HOME="/home/{{ ansible_ssh_user }}"
  echo $$ > /home/{{ ansible_ssh_user }}/logs/{{ daemon }}.pid
  cd /home/{{ ansible_ssh_user }}/{{ daemon }}
  #exec /usr/bin/nodejs /home/{{ ansible_ssh_user }}/{{ daemon }}/{{ file }} >> /home/{{ ansible_ssh_user }}/logs/{{ daemon }}.log 2>&1
  exec {{ command }} >> /home/{{ ansible_ssh_user }}/logs/{{ daemon }}.log 2>&1

end script

pre-start script

  echo "[`date`] Daemon {{ daemon }} Starting" >> /home/{{ ansible_ssh_user }}/logs/{{ daemon }}.log

end script

pre-stop script

  rm /home/{{ ansible_ssh_user }}/logs/{{ daemon }}.pid
  echo "[`date`] Daemon {{ daemon }} Stopping" >> /home/{{ ansible_ssh_user }}/logs/{{ daemon }}.log

end script
